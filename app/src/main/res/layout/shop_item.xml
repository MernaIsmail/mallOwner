<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card"

    >

    <TextView
        android:id="@+id/name"
        android:text="Shop Name"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


    <com.example.merna.mallowner.RoundedImageView
        android:id="@+id/ShopLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerInside"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/fbItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fbcontact"
            />
        <ImageView
            android:id="@+id/callItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/callcontact"
            />
        <ImageView
            android:id="@+id/twitterItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/twitercontact"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/editLayout"
            android:layout_width="75dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edit"
            />
            </LinearLayout>
        <LinearLayout
            android:id="@+id/deleteLayout"
            android:layout_width="75dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:id="@+id/img"
            android:padding="10dp"
            android:text="delete"/>

            </LinearLayout>
    </LinearLayout>


</LinearLayout>